<% if logged_in? && admin? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="home_form">
        <%= render 'shared/home_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Home Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Apartment</h1>
</div>
<div class="row">
<%= form_tag(homes_path, :method => "get", class: 'navbar-form navbar-left') do %>  
  <%= number_field_tag :begin, params[:begin], placeholder: "from price", class: "form-control" %>
  <%= number_field_tag :end, params[:end], placeholder: "to price", class: "form-control" %>
  <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
<% end %>
</div>
<div class="row">
    <aside class="col-md-4">
      <%= render 'shared/feed' %>
    </aside>
</div>
<%= link_to image_tag("chung-cu.png", alt: "Rails logo"),
            'http://rubyonrails.org/' %>
            <% end %>
