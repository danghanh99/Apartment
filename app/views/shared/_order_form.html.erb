<%= form_for([@home, @order || @home.orders.build]) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <label>Name:</label>
    <%= f.text_field :name, placeholder: "guest's name..." %>
    <label>Address:</label>
    <%= f.text_field :address, placeholder: "guest's address..." %>
    <label>Phone number:</label>
    <%= f.number_field :phone_number, placeholder: "guest's phone number..." %>
    <label>Rental Period:</label>
    <%= f.select :rental_period, options_for_select(Order.allowed_rental_duration), {:class => 'form-control', :prompt => 'rental_period'} %>
    <label>CheckIn Time:</label></br>
  <div class="form-group">
    <div class='input-group date' id='datetimepicker1'>
      <%= f.text_field :checkin_time, placeholder: "Input your checkin time...", class: "form-control"  %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
  </script>
  <%= f.submit btn, class: "btn btn-primary" %>
<% end %>
